SELECT ?name ?id (COUNT(*) AS ?count)
WHERE {
    VALUES ?wikidata { wd:Q10806 wd:Q166092 wd:Q3840201 wd:Q1067 wd:Q36488 wd:Q1345358 wd:Q1345358 wd:Q185007 wd:Q64707121 wd:Q55433 wd:Q2001 wd:Q6292252 wd:Q16534203 wd:Q1541043 wd:Q11762987 wd:Q365144 }

    OPTIONAL {
        {
            ?id ^wdt:P31 ?wikidata.
        } UNION {
            ?id ^wdt:P279 ?wikidata.
        }
        ?id rdfs:label ?name.
        FILTER(lang(?name)='it').
    }
}
GROUP BY ?name ?id
ORDER BY ?name